@model IEnumerable<MVC.Models.News>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "News-list";
}



<div class="container">
    <div class="card-container">
        @foreach (var p in Model)
        {
            <div class="card" style="width: 18rem;flex-direction:column">
                <div class="card-body" style="flex-direction:column">
                    <h5 class="card-title " style="color:brown">@p.Name</h5>
                    <p class="card-text">@p.Description</p>
                    <p class="card-text" style="font-size:x-small;color:darkgray;text-align:end">@p.CreatedDate</p>
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "admin")
                    {
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id=@p.Id>Edit Data</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Delete" asp-route-id=@p.Id>Delete Data</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

